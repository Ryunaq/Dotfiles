# Resizing
bindsym $mod+Shift+y resize shrink width 10 px
bindsym $mod+Shift+u resize shrink height 10 px
bindsym $mod+Shift+o resize grow width 10 px
bindsym $mod+Shift+i resize grow height 10 px

# Color stuff

set $bg-color 	         #2f343f
set $inactive-bg-color   #2f343f
set $text-color          #f3f4f5
set $inactive-text-color #676E7D
set $urgent-bg-color #E53935

# window colors
#                       border              background         text                 indicator
client.focused          $bg-color           $bg-color          $text-color          #00ff00
client.unfocused        $inactive-bg-color $inactive-bg-color $inactive-text-color #00ff00
client.focused_inactive $inactive-bg-color $inactive-bg-color $inactive-text-color #00ff00
client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          #00ff00

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
      colors {
          background $bg-color
              separator #757575
          #                  border             background         text
          focused_workspace  $bg-color          $bg-color          $text-color
          inactive_workspace $inactive-bg-color $inactive-bg-color $inactive-text-color
          urgent_workspace   $urgent-bg-color   $urgent-bg-color   $text-color
      }
    	font pango:Hack 10
    	position top
    	tray_output none
     status_command /home/fernando/.config/i3/bumblebee-status/bumblebee-status -m getcrypto pasink cpu customtime battery  weather -p interval=3 battery.device="BAT1" -t gruvbox-powerline
     #status_command /home/fernando/.config/i3/bumblebee-status/bumblebee-status -m pasink cpu customtime battery  -p interval=3 battery.device="BAT1" -t gruvbox-powerline
     # status_command /home/fernando/bumblebee-status/bumblebee-status -m getcrypto brightness pasink caffeine  memory cpu date time weather -p interval=2.5 time.format="%H:%M" date.format="%a, %b %d %Y"  -t gruvbox-powerline
}

# Gaps:
smart_borders on
smart_gaps on
gaps inner 20
hide_edge_borders both
for_window [class="^.*"] border pixel 0

#Math Windows binded to $mod+a
for_window [instance="math"] floating enable
for_window [instance="math"] resize set 800 300
for_window [instance="math"] move position center
bindsym $mod+a exec --no-startup-id urxvt -name "math" -fn "xft:mono:pixelsize=24" -e python -q 

# Other bindings:
bindsym XF86AudioRaiseVolume exec pamixer -i 5
bindsym XF86AudioLowerVolume exec pamixer -d 5
bindsym XF86AudioMute exec pamixer -t
bindsym XF86MonBrightnessUp exec xbacklight -inc 5
bindsym XF86MonBrightnessDown exec xbacklight -dec 5

bindsym Mod1+Tab workspace next
bindsym Mod1+Shift+Tab workspace prev
bindsym Shift+Print exec escrotum -s -C
bindsym Scroll_Lock exec bash /usr/bin/local/lockscript.sh

bindsym $mod+Shift+e exec setxkbmap es && xmodmap /usr/bin/local/.speedswapper

bindsym $mod+Shift+f exec firefox

bindsym $mod+Shift+n exec setxkbmap us && xmodmap /usr/bin/local/.speedswapper

bindsym $mod+Shift+p exec urxvt -e python '/HDD/Program Files/Journal/journal.py'
#bindsym $mod+Shift+p exec urxvt -e echo 'asdf'
#&& python journal.py

bindsym $mod+r exec urxvt -e ranger

bindsym $mod+s gaps inner current plus 5
bindsym $mod+Shift+s gaps inner current minus 5

bindsym $mod+shift+x exec bash /usr/bin/local/lockscript.sh

bindsym $mod+z gaps outer current plus 5
bindsym $mod+Shift+z gaps outer current minus 5

bindsym $mod+Shift+g mode "$mode_gaps"

mode "$mode_gaps" {
        bindsym o      mode "$mode_gaps_outer"
        bindsym i      mode "$mode_gaps_inner"
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

mode "$mode_gaps_inner" {
        bindsym plus  gaps inner current plus 5
        bindsym minus gaps inner current minus 5
        bindsym 0     gaps inner current set 0

        bindsym Shift+plus  gaps inner all plus 5
        bindsym Shift+minus gaps inner all minus 5
        bindsym Shift+0     gaps inner all set 0

        bindsym Return mode "default"
        bindsym Escape mode "default"
}
mode "$mode_gaps_outer" {
        bindsym plus  gaps outer current plus 5
        bindsym minus gaps outer current minus 5
        bindsym 0     gaps outer current set 0

        bindsym Shift+plus  gaps outer all plus 5
        bindsym Shift+minus gaps outer all minus 5
        bindsym Shift+0     gaps outer all set 0

        bindsym Return mode "default"
        bindsym Escape mode "default"
}


